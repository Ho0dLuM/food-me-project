{% include "../../partials/_errors.njk" %}

<form action="/restaurants/{{ restaurant.id }}/reviews/{% if review.id %}{{ review.id }}?_method=PUT{% endif %}" method="POST">
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <label for="rating">Posting As:</label>
        <p class="form-control-static">{{ user.preferred_name }} {{ user.last_name }}</p>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        {% include './_rating.njk' %}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <label for="review">Your Review</label>
        <textarea rows="5" class="form-control" name="content" id="review">{{ review.content }}</textarea>
      </div>
    </div>
  </div>

  {% if review.id %}
    <input type="hidden" name="id" value="{{ review.id }}">
  {% endif %}

  <input type="hidden" name="restaurant_id" value="{{ restaurant.id }}">
  <input type="hidden" name="user_id" value="{{ user.id }}">
  <button type="submit" class="btn btn-default">Submit</button>
</form>
