{% include "./_errors.njk" %}

<form action="/restaurants/{% if restaurant.id %}{{ restaurant.id }}?_method=PUT{% endif %}" method="POST">
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <label for="name">Restaurant Name</label>
        <input type="text" class="form-control" name="name" id="name" value="{{restaurant.name}}">
      </div>
      <div class="col-md-6">
        <label for="cuisine_type">Cuisine</label>
        <select class="form-control" name="cuisine_type" id="cuisine_type" value="">
          <option value="">-- Select a Cuisine --</option>
          {% include './_cuisines.njk' %}
        </select>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="description">Restaurant Description</label>
    <textarea type="text" class="form-control" name="description" id="description">{{restaurant.description}}</textarea>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <label for="address_line_1">Street Address</label>
        <input type="text" class="form-control" name="address[line_1]" id="address_line_1" value="{{address.line_1}}">
      </div>
      <div class="col-md-6">
        <label for="address_line_2">Apt / Suite</label>
        <input type="text" class="form-control" name="address[line_2]" id="address_line_2" value="{{address.line_2}}">
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <label for="address_city">City</label>
        <input type="text" class="form-control" name="address[city]" id="city" value="{{address.city}}">
      </div>
      <div class="col-md-3">
        <label for="address_state">State</label>
        <select class="form-control" name="address[state]" id="state">
          <option value="">-- Select a State --</option>
          {% include './_states.njk' %}
        </select>
      </div>
      <div class="col-md-3">
        <label for="address_zip">Zip</label>
        <input type="text" class="form-control" name="address[zip]" id="zip" value="{{address.zip}}">
      </div>
    </div>
  </div>

  {% if restaurant.id %}
    <input type="hidden" name="id" value="{{ restaurant.id }}">
  {% endif %}

  {% if address.id %}
    <input type="hidden" name="address[id]" value="{{ address.id }}">
  {% endif %}
  <button type="submit" class="btn btn-default">Submit</button>
</form>
