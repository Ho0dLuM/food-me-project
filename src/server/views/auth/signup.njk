{% extends "../_base.njk" %}

{% block title %}Create an Account{% endblock %}

{% block content %}

  <div class="form-page container">
    <h1>Create an Account</h1>

    {% include "../partials/_errors.njk" %}

    <form action="/users/{% if user.id %}{{ user.id }}?_method=PUT{% endif %}" method="POST">
      <div class="form-group">
        <div class="row">
          <div class="col-md-6">
            <label for="user_preferred_name">Preferred Name</label>
            <input type="text" class="form-control" name="preferred_name" id="user_preferred_name" value="{{ user.preferred_name }}">
          </div>
          <div class="col-md-6">
            <label for="user_last_name">Last Name</label>
            <input type="text" class="form-control" name="last_name" id="user_last_name" value="{{ user.last_name }}">
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-6">
            <label for="account_email">Email</label>
            <input type="email" class="form-control" name="account[email]" id="account_email" value="{{ account.email }}">
          </div>
          <div class="col-md-6">
            <label for="account_password">Password</label>
            <input type="password" class="form-control" name="account[password]" id="account_password">
          </div>
        </div>
      </div>

      {% if user.account_id %}
        <input type="hidden" name="account_id" value="{{ user.account_id }}">
      {% endif %}

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>

{% endblock %}
